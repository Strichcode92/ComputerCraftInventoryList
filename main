local monitor = peripheral.find("monitor")
local speaker = peripheral.find("speaker")
local Inventar = peripheral.find("inventory")
 
monitor.clear()
monitor.setCursorPos(1,1)
speaker.playSound("entity.creeper.primed")
monitor.write("Ein kleiner Test ob es so funktioniert")
 
sleep(10)
 
speaker.playSound("entity.generic.explode")
monitor.clear()
monitor.setCursorPos(1,1)
monitor.write("Willkommen bei der Inventar Anzeige. Welches Item soll es denn sein?")
sleep(10)
Einheit = Inventar.size()
monitor.write("Einheit")
